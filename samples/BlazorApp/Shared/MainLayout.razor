@inherits LayoutComponentBase

<MdcDrawer @ref="@sidebar" @ref:suppressField>
    <div class="mdc-list">
        <MdcNavLink Href="" Icon="home" Text="Home" Match=NavLinkMatch.All />
        <MdcNavLink Href="button" Icon="touch_app" Text="Button" />
        <MdcNavLink Href="checkbox" Icon="check_box" Text="Checkbox" />
        <MdcNavLink Href="dialog" Icon="picture_in_picture" Text="Dialog" />
        <MdcNavLink Href="progress" Icon="access_time" Text="Progress" />
        <MdcNavLink Href="list" Icon="list" Text="List" />
        <MdcNavLink Href="select" Icon="arrow_drop_down" Text="Select" />
        <MdcNavLink Href="switch" Icon="toggle_on" Text="Switch" />
        <MdcNavLink Href="textfield" Icon="text_format" Text="Text field" />
    </div>
</MdcDrawer>

<div class="mdc-drawer-app-content">
    <MdcTopAppBar Title="Razor Components Material Design" OnNavClicked="@(() => sidebar.Toggle())" ScrollTarget="#main-content">
        <span class="mdc-top-app-bar-content">
            <i class="material-icons">account_circle</i>
            Hello!
        </span>
    </MdcTopAppBar>

    <main class="main-content" id="main-content">
        <div class="mdc-top-app-bar--fixed-adjust">
            <div class="mdc-card main-content-card">
                @Body
            </div>
        </div>
    </main>
</div>

@functions {
    MdcDrawer sidebar;
}
